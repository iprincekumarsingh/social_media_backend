model Profile {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  addresses Address[]
  user      User      @relation(fields: [userId], references: [id])
  userId    String    @unique @db.ObjectId
}

type Address {
  street String
  city   String
  state  String
  zip    String
}
