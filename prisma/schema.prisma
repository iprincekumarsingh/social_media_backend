generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String
  name    String
  posts   Post[]
  profile Profile?
}

model Post {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  slug     String
  title    String
  body     String
  // relation 1
  author   User?  @relation(fields: [authorId], references: [id])
  authorId String @db.ObjectId
  // comments Comment[]
}

